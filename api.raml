                "description": "it's important",
                "creator": {
                  "id" : "aaaaa-bbbbbb-ccccc",
                  "username": "horst",
                  "email": "horst@example.com"
                },
                "assignee": {
                  "id" : "aaaaa-bbbbbb-ccccc",
                  "username": "horst",
                  "email": "horst@example.com"
                }
              }
            ]
  post:
    body: todo
    responses:
      200:
        body:
          type: todo
          example: |
            {
              "id": "aaaaa-bbbbbb-ccccc",
              "headline": "do stuff",
              "description": "it's important",
              "creator": {
                "id" : "aaaaa-bbbbbb-ccccc",
                "username": "horst",
                "email": "horst@example.com"
              },
              "assignee": {
                "id" : "aaaaa-bbbbbb-ccccc",
                "username": "horst",
                "email": "horst@example.com"
              }
            }
        description: todo with id


  /{id}:
    get:
      responses:
        200:
          body:
            type: todo
            example: |
              {
                "id": "aaaaa-bbbbbb-ccccc",
                "headline": "do stuff",
                "description": "it's important",
                "creator": {
                  "id" : "aaaaa-bbbbbb-ccccc",
                  "username": "horst",
                  "email": "horst@example.com"
                },
                "assignee": {
                  "id" : "aaaaa-bbbbbb-ccccc",
                  "username": "horst",
                  "email": "horst@example.com"
                }
              }
    delete:
      responses:
        200:
          body:
            type: todo
            example: |
              {
                "id": "aaaaa-bbbbbb-ccccc",
                "headline": "do stuff",
                "description": "it's important",
                "creator": {
                  "id" : "aaaaa-bbbbbb-ccccc",
                  "username": "horst",
